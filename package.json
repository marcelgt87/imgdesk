{
  "name": "imagedesk",
  "version": "1.0.0",
  "description": "Native desktop image management and clustering application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "dev": "electron . --dev"
  },
  "keywords": ["image", "clustering", "similarity", "desktop", "electron"],
  "author": "Marcel",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "sharp": "^0.32.6",
    "fs-extra": "^11.1.1"
  },
  "build": {
    "appId": "com.marcel.imagedesk",
    "productName": "ImageDesk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}